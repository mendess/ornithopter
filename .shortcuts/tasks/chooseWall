#!/data/data/com.termux/files/usr/bin/bash

. ~/.bash_profile

notify() {
    echo "$out" | termux-notification -t ChooseWall
    return 1
}
if [ "$1" ]; then
    wall="$1"
else
    [ "$WALLPAPERS" ] || return
    wall="$(find -H "$WALLPAPERS" | shuf -n 1)"
fi
echo "setting $wall"
magick "$wall" \
    -gravity center \
    -extent 9:20 \
    .wall || cp -v "$wall" .wall

if ! out="$out
    $(termux-wallpaper -f .wall 2>&1)" ; then
    notify
else
    termux-toast -s -g bottom "$(basename "$wall")"
fi
